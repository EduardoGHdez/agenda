.container
  .d-flex.flex-column
    %h2.bg-primary.text-center.text-white.p-4 Contacts
    .contacts-list
      -@contacts.each do |contact|
        = link_to contact, class: 'contact' do
          = image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/1/17/Google_Contacts_logo_vector.svg/1200px-Google_Contacts_logo_vector.svg.png", class: "image"
          .d-flex.flex-column.justify-content-center.m-4
            .row= "#{contact.name} #{contact.lastname}"
            .row= contact.phone 
            .row= contact.email
    = link_to new_contact_path, class: 'align-self-end float' do
      =image_tag"https://cdn.pixabay.com/photo/2017/01/10/23/01/icon-1970474_960_720.png", class: "image"
